<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="85dp"
    android:layout_height="wrap_content"
    android:layout_marginStart="16dp"
    android:layout_marginEnd="16dp"
    >
    
    <ImageView
        android:id="@+id/iv_mayknow_firend_summary_profile"
        android:layout_width="64dp"
        android:layout_height="64dp"
        android:src="@drawable/ic_profile"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"/>

    <TextView
        android:id="@+id/tv_mayknow_friend_summary_nickname"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        tools:text="닉네임"
        style="@style/body1"
        android:textColor="@color/label_normal"
        android:layout_marginTop="16dp"
        app:layout_constraintTop_toBottomOf="@+id/iv_mayknow_firend_summary_profile"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        />

    <TextView
        android:id="@+id/tv_maykonw_friend_summary_feature"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        tools:text="함께 아는 친구 2명"
        style="@style/detail2"
        android:textColor="@color/label_assistive"
        android:layout_marginTop="8dp"
        app:layout_constraintTop_toBottomOf="@+id/tv_mayknow_friend_summary_nickname"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"/>
    
    <ToggleButton
        android:id="@+id/btn_mayknow_friend_summary_follow"
        android:layout_width="54dp"
        android:layout_height="29dp"
        android:layout_marginTop="16dp"
        app:layout_constraintTop_toBottomOf="@+id/tv_maykonw_friend_summary_feature"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        />

</androidx.constraintlayout.widget.ConstraintLayout>