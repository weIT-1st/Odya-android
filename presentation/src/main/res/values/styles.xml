    <style name="ShapeableImageViewCircle">
        <item name="cornerFamily">rounded</item>
        <item name="cornerSize">50%</item>
    </style>

    <style name="CustomRatingBar" parent="@android:style/Widget.RatingBar">
        <item name="android:progressDrawable">@drawable/selector_star</item>
        <item name="android:minHeight">15dip</item>
        <item name="android:maxHeight">47dip</item>
    </style>


    <style name="edit_text_box" parent="Widget.Design.TextInputLayout">
        <item name="colorControlNormal">@color/elevation3</item>  // unFocus 상태일때 밑줄 색.
        <item name="boxStrokeColor">@color/elevation3</item> // Focus 상태일때 밑줄 색.
    </style>

    <style name="ShapeableImageView8dp">
        <item name="cornerFamily">rounded</item>
        <item name="cornerRadius">8dp</item>
    </style>

    <style name="AppBottomSheetDialogTheme"
        parent="Theme.Design.Light.BottomSheetDialog">
        <item name="bottomSheetStyle">@style/AppModalStyle</item>
        <item name="android:windowIsFloating">false</item>
    </style>


    <style name="AppModalStyle"
        parent="Widget.Design.BottomSheet.Modal">
        <item name="android:background">@drawable/corners_top_12_in_bottom_sheet</item>
    </style>

    <style name="CustomChipChoice" parent="@style/Widget.MaterialComponents.Chip.Choice">
        <item name="chipBackgroundColor">@color/selector_my_activity_background</item>
        <item name="android:textColor">@color/selector_my_activity_text</item>
