<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <data>

    </data>

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:padding="20dp"
        android:background="@drawable/corners_all_12"
        android:backgroundTint="@color/elevation5">

        <TextView
            android:id="@+id/tv_create_review_title"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            style="@style/TextAppearance.MaterialComponents.Headline5"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            android:text="@string/create_review_title"
            android:textColor="@color/label_normal"/>

        <TextView
            android:id="@+id/tv_create_review_star"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            style="@style/detail2"
            app:layout_constraintTop_toBottomOf="@+id/tv_create_review_title"
            app:layout_constraintStart_toStartOf="parent"
            android:layout_marginTop="16dp"
            android:text="@string/create_review_star"/>

        <ToggleButton
            android:id="@+id/create_review_first_star"
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:background="@drawable/selector_star"
            android:textOff=""
            android:textOn=""
            android:layout_marginTop="16dp"
            android:layout_marginStart="20dp"
            app:layout_constraintTop_toBottomOf="@+id/tv_create_review_star"
            app:layout_constraintStart_toStartOf="parent"/>

        <ToggleButton
            android:id="@+id/create_review_second_star"
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:background="@drawable/selector_star"
            android:textOff=""
            android:textOn=""
            android:layout_marginTop="16dp"
            android:layout_marginStart="12dp"
            app:layout_constraintTop_toBottomOf="@+id/tv_create_review_star"
            app:layout_constraintStart_toEndOf="@+id/create_review_first_star"/>

        <ToggleButton
            android:id="@+id/create_review_third_star"
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:background="@drawable/selector_star"
            android:textOff=""
            android:textOn=""
            android:layout_marginTop="16dp"
            android:layout_marginStart="12dp"
            app:layout_constraintTop_toBottomOf="@+id/tv_create_review_star"
            app:layout_constraintStart_toEndOf="@+id/create_review_second_star"/>

        <ToggleButton
            android:id="@+id/create_review_fourth_star"
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:background="@drawable/selector_star"
            android:textOff=""
            android:textOn=""
            android:layout_marginTop="16dp"
            android:layout_marginStart="12dp"
            app:layout_constraintTop_toBottomOf="@+id/tv_create_review_star"
            app:layout_constraintStart_toEndOf="@+id/create_review_third_star"/>

        <ToggleButton
            android:id="@+id/create_review_fifth_star"
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:background="@drawable/selector_star"
            android:textOff=""
            android:textOn=""
            android:layout_marginTop="16dp"
            android:layout_marginStart="12dp"
            android:layout_marginEnd="12dp"
            app:layout_constraintTop_toBottomOf="@+id/tv_create_review_star"
            app:layout_constraintStart_toEndOf="@+id/create_review_fourth_star"
            app:layout_constraintEnd_toEndOf="parent"/>

        <TextView
            android:id="@+id/tv_create_review_detial"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            style="@style/detail2"
            app:layout_constraintTop_toBottomOf="@+id/create_review_first_star"
            app:layout_constraintStart_toStartOf="parent"
            android:layout_marginTop="16dp"
            android:text="@string/create_review_detail"/>
        
        <EditText
            android:id="@+id/et_create_review_detail"
            android:layout_width="0dp"
            android:layout_height="140dp"
            style="@style/body2"
            android:background="@drawable/corners_all_8"
            android:hint="@string/create_review_detail_hint"
            android:textColorHint="@color/label_alternative"
            android:layout_marginTop="16dp"
            app:layout_constraintTop_toBottomOf="@+id/tv_create_review_detial"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            />

        <androidx.appcompat.widget.AppCompatButton
            android:id="@+id/btn_create_review_cancel"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            style="@style/h6"
            android:text="@string/create_review_cancel"
            android:textColor="@color/label_inactive"
            android:background="@drawable/corners_all_8"
            android:backgroundTint="@color/interaction_inactive"
            android:layout_marginTop="18dp"
            app:layout_constraintTop_toBottomOf="@+id/et_create_review_detail"
            app:layout_constraintStart_toStartOf="parent"/>

        <androidx.appcompat.widget.AppCompatButton
            android:id="@+id/btn_create_review_register"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            style="@style/h6"
            android:text="@string/create_review_register"
            android:textColor="@color/label_reversed"
            android:background="@drawable/corners_all_8"
            android:backgroundTint="@color/primary"
            android:layout_marginTop="18dp"
            app:layout_constraintTop_toBottomOf="@+id/et_create_review_detail"
            app:layout_constraintEnd_toEndOf="parent"
            />


    </androidx.constraintlayout.widget.ConstraintLayout>
</layout>
