<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content">

    <com.google.android.material.textview.MaterialTextView
        android:id="@+id/tv_item_place_recent_search"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:textAppearance="@style/detail1"
        android:textColor="@color/label_assistive"
        android:padding="4dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        tools:text="바다여행"/>

    <ImageButton
        android:id="@+id/btn_item_place_recent_search_delete"
        android:layout_width="16dp"
        android:layout_height="16dp"
        android:background="@android:color/transparent"
        android:src="@drawable/ic_x"
        app:layout_constraintBottom_toBottomOf="@+id/tv_item_place_recent_search"
        app:layout_constraintStart_toEndOf="@+id/tv_item_place_recent_search"
        app:layout_constraintTop_toTopOf="@+id/tv_item_place_recent_search"
        app:layout_constraintVertical_bias="0.454" />

</androidx.constraintlayout.widget.ConstraintLayout>
