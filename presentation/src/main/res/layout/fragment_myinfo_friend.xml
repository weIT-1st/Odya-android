<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".ui.myinfo.MyinfoFriendActivity">

    <com.google.android.material.appbar.AppBarLayout
        android:id="@+id/ab_follower_following"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/tl_follower_following"
        app:layout_constraintTop_toTopOf="parent">

        <com.google.android.material.appbar.MaterialToolbar
            android:id="@+id/tb_follower_following"
            android:layout_width="match_parent"
            android:layout_height="56dp"
            app:title="@string/myinfo_friend_title"
            app:titleTextAppearance="@style/h6"
            app:titleTextColor="@color/label_normal"
            app:titleCentered="true"
            app:navigationIcon="@drawable/ic_go_back"
            android:background="@color/background_normal"
            />

    </com.google.android.material.appbar.AppBarLayout>

    <com.google.android.material.tabs.TabLayout
        android:id="@+id/tl_follower_following"
        android:layout_width="match_parent"
        android:layout_height="48dp"
        app:tabIndicatorColor="@color/primary"
        app:tabIndicatorHeight="4dp"
        app:tabSelectedTextColor="@color/label_normal"
        app:tabTextAppearance="@style/h6"
        app:tabTextColor="@color/label_inactive"
        app:tabBackground="@drawable/selector_tl_background"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/ab_follower_following"
        app:layout_constraintBottom_toTopOf="@+id/et_search_friend">

        <com.google.android.material.tabs.TabItem
            android:id="@+id/tab_follower"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/follower"
            style="@style/h6"/>

        <com.google.android.material.tabs.TabItem
            android:id="@+id/tab_following"
            style="@style/h6"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/following"
            tools:layout_editor_absoluteX="205dp"
            tools:layout_editor_absoluteY="56dp" />

    </com.google.android.material.tabs.TabLayout>

    <EditText
        android:id="@+id/et_search_friend"
        android:layout_width="match_parent"
        android:layout_height="40dp"
        android:layout_marginLeft="16dp"
        android:layout_marginTop="16dp"
        android:layout_marginRight="16dp"
        android:background="@drawable/bg_item_community_reply"
        android:drawableRight="@drawable/ic_search"
        android:hint="@string/hint_find_friend"
        style="@style/body2"
        android:textColor="#595959"
        android:imeOptions="actionSearch"
        android:inputType="text"
        android:maxLines="1"
        android:paddingStart="16dp"
        android:paddingEnd="16dp"
        android:textColorHint="@color/interaction_inactive"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/tl_follower_following" />

    <com.google.android.material.button.MaterialButtonToggleGroup
        android:id="@+id/btn_tgg_sort"
        app:singleSelection="true"
        app:checkedButton="@+id/btn_sort_new"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintEnd_toEndOf="@+id/et_search_friend"
        app:layout_constraintTop_toBottomOf="@+id/et_search_friend">

        <com.google.android.material.button.MaterialButton
            android:id="@+id/btn_sort_new"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/sort_new"
            style="@style/btn_follow_sort"
            android:backgroundTint="@color/background_normal"/>

        <com.google.android.material.button.MaterialButton
            android:id="@+id/btn_sort_abc"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/sort_abc"
            style="@style/btn_follow_sort"
            android:backgroundTint="@color/background_normal"/>

    </com.google.android.material.button.MaterialButtonToggleGroup>

    <androidx.recyclerview.widget.RecyclerView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginStart="16dp"
        android:layout_marginEnd="16dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/btn_tgg_sort"
        tools:listitem="@layout/item_friends" />


</androidx.constraintlayout.widget.ConstraintLayout>