<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools">

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginStart="20dp"
            android:layout_marginEnd="20dp">

            <include
                android:id="@+id/include_tab_place_no_my_journal"
                layout="@layout/fragment_feed_post_no_travellog"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintStart_toStartOf="parent" />

            <TextView
                android:id="@+id/tv_tab_place_my_journal"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:text="@string/place_my_journal"
                android:textAppearance="@style/h4"
                android:textColor="@color/label_normal"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/include_tab_place_no_my_journal" />

            <androidx.recyclerview.widget.RecyclerView
                android:id="@+id/rv_tab_place_my_journal"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="24dp"
                android:orientation="horizontal"
                app:layoutManager="androidx.recyclerview.widget.LinearLayoutManager"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintHorizontal_bias="0.0"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/tv_tab_place_my_journal"
                tools:itemCount="2"
                tools:listitem="@layout/item_my_jounal" />

            <TextView
                android:id="@+id/tv_tab_place_friend_joureny"
                style="@style/h4"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="20dp"
                android:text="@string/place_friend_journal"
                android:textColor="@color/label_normal"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/rv_tab_place_my_journal" />

            <androidx.recyclerview.widget.RecyclerView
                android:id="@+id/rv_tab_place_friend_journey"
                android:layout_width="wrap_content"
                android:layout_height="200dp"
                android:layout_marginTop="22dp"
                android:orientation="horizontal"
                app:layoutManager="androidx.recyclerview.widget.LinearLayoutManager"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/tv_tab_place_friend_joureny"
                tools:itemCount="10"
                tools:listitem="@layout/item_friend_journey" />

            <TextView
                android:id="@+id/tv_tab_place_recommend_journey"
                style="@style/h4"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="50dp"
                android:text="@string/place_recommend_journal"
                android:textColor="@color/label_normal"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/rv_tab_place_friend_journey" />

            <androidx.recyclerview.widget.RecyclerView
                android:id="@+id/rv_tab_place_recommend_journey"
                android:layout_width="match_parent"
                android:layout_height="84dp"
                android:layout_marginTop="22dp"
                android:orientation="horizontal"
                app:layoutManager="androidx.recyclerview.widget.LinearLayoutManager"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/tv_tab_place_recommend_journey"
                tools:itemCount="8"
                tools:listitem="@layout/item_recommend_journey" />
        </androidx.constraintlayout.widget.ConstraintLayout>

    </ScrollView>
</layout>
