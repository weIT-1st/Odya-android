<resources>
    <style name="Theme.Odya" parent="Theme.MaterialComponents.DayNight.NoActionBar">
        <!-- Primary brand color. -->
        <item name="colorPrimary">@color/primary</item>
        <item name="colorPrimaryVariant">@color/primary</item>
        <item name="colorOnPrimary">@color/label_reversed</item>
        <!-- Secondary brand color. -->
        <item name="colorSecondary">@color/secondary</item>
        <item name="colorSecondaryVariant">@color/secondary</item>
        <item name="colorOnSecondary">@color/label_reversed</item>
        <item name="colorTertiary">@color/tertiary</item>
        <!-- Status bar color. -->
        <item name="android:statusBarColor">?attr/colorPrimaryVariant</item>
        <!-- Customize your theme here. -->
        <item name="android:colorBackground">@color/background_normal</item>
        <item name="colorOnBackground">@color/label_normal</item>
        <item name="colorSurface">@color/background_normal</item>
        <item name="colorOnSurface">@color/label_normal</item>
        <item name="colorError">@color/warning</item>
        <item name="android:datePickerStyle">@style/defaultDatePicker</item>
    </style>
    <style name="Theme.Splash" parent="Theme.Odya">
        <item name="android:windowFullscreen">true</item>
    </style>
    <style name="defaultDatePicker">
        <item name="android:datePickerMode">spinner</item>
    </style>

</resources>
