<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools">

    <data>
        <variable
            name="vm"
            type="com.weit.presentation.ui.profile.preferences.setting.SettingViewModel" />
    </data>

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <com.google.android.material.appbar.MaterialToolbar
            android:id="@+id/tb_setting"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@color/background_normal"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:navigationIcon="@drawable/ic_direction_left"
            app:title="@string/setting_title"
            app:titleCentered="true"
            app:titleTextAppearance="@style/h6"
            app:titleTextColor="@color/label_normal" />

        <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="0dp"
            app:layout_constraintTop_toBottomOf="@id/tb_setting"
            app:layout_constraintBottom_toBottomOf="parent"
            android:background="@color/elevation2">

            <androidx.constraintlayout.widget.Guideline
                android:id="@+id/gl_setting_start"
                android:layout_width="wrap_content"
                android:layout_height="0dp"
                android:orientation="vertical"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintGuide_begin="20dp"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent" />

            <androidx.constraintlayout.widget.Guideline
                android:id="@+id/gl_setting_end"
                android:layout_width="wrap_content"
                android:layout_height="0dp"
                android:orientation="vertical"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintGuide_end="20dp"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent" />

            <com.google.android.material.textview.MaterialTextView
                android:id="@+id/tv_setting_update_user_info"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:textAppearance="@style/body1"
                android:textColor="@color/label_normal"
                android:text="@string/setting_update_user_info"
                android:paddingTop="12dp"
                android:paddingBottom="24dp"
                android:layout_marginTop="20dp"
                android:drawableEnd="@drawable/ic_direction_right"
                android:drawableTint="@color/label_assistive"
                android:onClickListener="@{() -> vm.moveToUpdateInfo()}"
                app:layout_constraintStart_toStartOf="@id/gl_setting_start"
                app:layout_constraintEnd_toEndOf="@id/gl_setting_end"
                app:layout_constraintTop_toTopOf="parent"/>

            <com.google.android.material.divider.MaterialDivider
                android:layout_width="0dp"
                android:layout_height="1dp"
                android:background="@color/line_alternative"
                app:layout_constraintStart_toStartOf="@id/gl_setting_start"
                app:layout_constraintEnd_toEndOf="@id/gl_setting_end"
                app:layout_constraintTop_toBottomOf="@+id/tv_setting_update_user_info"/>

            <com.google.android.material.textview.MaterialTextView
                android:id="@+id/tv_setting_privacy_policy"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:textAppearance="@style/body1"
                android:textColor="@color/label_normal"
                android:text="@string/setting_privacy_policy"
                android:paddingTop="24dp"
                android:paddingBottom="24dp"
                android:drawableEnd="@drawable/ic_direction_right"
                android:drawableTint="@color/label_assistive"
                android:onClickListener="@{() -> vm.moveToSettingDetail(0)}"
                app:layout_constraintStart_toStartOf="@id/gl_setting_start"
                app:layout_constraintEnd_toEndOf="@id/gl_setting_end"
                app:layout_constraintTop_toBottomOf="@+id/tv_setting_update_user_info"/>

            <com.google.android.material.divider.MaterialDivider
                android:layout_width="0dp"
                android:layout_height="1dp"
                android:background="@color/line_alternative"
                app:layout_constraintStart_toStartOf="@id/gl_setting_start"
                app:layout_constraintEnd_toEndOf="@id/gl_setting_end"
                app:layout_constraintTop_toBottomOf="@+id/tv_setting_privacy_policy"/>

            <com.google.android.material.textview.MaterialTextView
                android:id="@+id/tv_setting_terms_of_use"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:textAppearance="@style/body1"
                android:textColor="@color/label_normal"
                android:text="@string/setting_terms_of_use"
                android:paddingTop="24dp"
                android:paddingBottom="24dp"
                android:drawableEnd="@drawable/ic_direction_right"
                android:drawableTint="@color/label_assistive"
                android:onClickListener="@{() -> vm.moveToSettingDetail(1)}"
                app:layout_constraintStart_toStartOf="@id/gl_setting_start"
                app:layout_constraintEnd_toEndOf="@id/gl_setting_end"
                app:layout_constraintTop_toBottomOf="@+id/tv_setting_privacy_policy"/>

            <com.google.android.material.divider.MaterialDivider
                android:layout_width="0dp"
                android:layout_height="1dp"
                android:background="@color/line_alternative"
                app:layout_constraintStart_toStartOf="@id/gl_setting_start"
                app:layout_constraintEnd_toEndOf="@id/gl_setting_end"
                app:layout_constraintTop_toBottomOf="@+id/tv_setting_terms_of_use"/>

            <com.google.android.material.textview.MaterialTextView
                android:id="@+id/tv_setting_alarm"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:textAppearance="@style/body1"
                android:textColor="@color/label_normal"
                android:text="@string/setting_alarm"
                android:paddingTop="24dp"
                android:paddingBottom="12dp"
                app:layout_constraintStart_toStartOf="@id/gl_setting_start"
                app:layout_constraintEnd_toStartOf="@id/tv_setting_alarm_all"
                app:layout_constraintTop_toBottomOf="@+id/tv_setting_terms_of_use"/>

            <com.google.android.material.textview.MaterialTextView
                android:id="@+id/tv_setting_alarm_all"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:textAppearance="@style/body1"
                android:textColor="@color/label_assistive"
                android:text="@string/setting_alarm_all"
                android:layout_marginEnd="24dp"
                app:layout_constraintTop_toTopOf="@id/switch_setting_alarm_all"
                app:layout_constraintBottom_toBottomOf="@id/switch_setting_alarm_all"
                app:layout_constraintEnd_toStartOf="@id/switch_setting_alarm_all"/>

            <androidx.appcompat.widget.SwitchCompat
                android:id="@+id/switch_setting_alarm_all"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="12dp"
                android:background="@null"
                android:thumb="@drawable/switch_thumb"
                android:checked="@={vm.isAlarmAll()}"
                app:track="@drawable/selector_switch_track"
                app:layout_constraintTop_toBottomOf="@id/tv_setting_terms_of_use"
                app:layout_constraintEnd_toEndOf="@id/gl_setting_end"/>

            <com.google.android.material.textview.MaterialTextView
                android:id="@+id/tv_setting_alarm_like"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:textAppearance="@style/body1"
                android:textColor="@color/label_assistive"
                android:text="@string/setting_alarm_community_like"
                android:layout_marginEnd="24dp"
                app:layout_constraintTop_toTopOf="@id/switch_setting_alarm_like"
                app:layout_constraintBottom_toBottomOf="@id/switch_setting_alarm_like"
                app:layout_constraintEnd_toStartOf="@id/switch_setting_alarm_like"/>

            <androidx.appcompat.widget.SwitchCompat
                android:id="@+id/switch_setting_alarm_like"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:background="@null"
                android:thumb="@drawable/switch_thumb"
                android:checked="@={vm.isAlarmLike()}"
                app:track="@drawable/selector_switch_track"
                app:layout_constraintTop_toBottomOf="@id/switch_setting_alarm_all"
                app:layout_constraintEnd_toEndOf="@id/gl_setting_end"/>

            <com.google.android.material.textview.MaterialTextView
                android:id="@+id/tv_setting_alarm_comment"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:textAppearance="@style/body1"
                android:textColor="@color/label_assistive"
                android:text="@string/setting_alarm_community_comment"
                android:layout_marginEnd="24dp"
                app:layout_constraintTop_toTopOf="@id/switch_setting_alarm_comment"
                app:layout_constraintBottom_toBottomOf="@id/switch_setting_alarm_comment"
                app:layout_constraintEnd_toStartOf="@id/switch_setting_alarm_comment"/>

            <androidx.appcompat.widget.SwitchCompat
                android:id="@+id/switch_setting_alarm_comment"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:background="@null"
                android:thumb="@drawable/switch_thumb"
                android:checked="@={vm.isAlarmComment()}"
                app:track="@drawable/selector_switch_track"
                app:layout_constraintEnd_toEndOf="@id/gl_setting_end"
                app:layout_constraintTop_toBottomOf="@id/switch_setting_alarm_like" />

            <com.google.android.material.textview.MaterialTextView
                android:id="@+id/tv_setting_alarm_marketing"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:textAppearance="@style/body1"
                android:textColor="@color/label_assistive"
                android:text="@string/setting_alarm_marketing"
                android:layout_marginEnd="24dp"
                app:layout_constraintTop_toTopOf="@id/switch_setting_alarm_marketing"
                app:layout_constraintBottom_toBottomOf="@id/switch_setting_alarm_marketing"
                app:layout_constraintEnd_toStartOf="@id/switch_setting_alarm_marketing"/>

            <androidx.appcompat.widget.SwitchCompat
                android:id="@+id/switch_setting_alarm_marketing"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:background="@null"
                android:thumb="@drawable/switch_thumb"
                android:checked="@={vm.isAlarmMarketing()}"
                app:track="@drawable/selector_switch_track"
                app:layout_constraintTop_toBottomOf="@id/switch_setting_alarm_comment"
                app:layout_constraintEnd_toEndOf="@id/gl_setting_end"/>

            <com.google.android.material.divider.MaterialDivider
                android:layout_width="0dp"
                android:layout_height="1dp"
                android:background="@color/line_alternative"
                app:layout_constraintStart_toStartOf="@id/gl_setting_start"
                app:layout_constraintEnd_toEndOf="@id/gl_setting_end"
                app:layout_constraintTop_toBottomOf="@+id/switch_setting_alarm_marketing"/>

            <com.google.android.material.textview.MaterialTextView
                android:id="@+id/tv_setting_open_source"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:textAppearance="@style/body1"
                android:textColor="@color/label_normal"
                android:text="@string/setting_open_source"
                android:paddingTop="24dp"
                android:paddingBottom="24dp"
                android:drawableEnd="@drawable/ic_direction_right"
                android:drawableTint="@color/label_assistive"
                android:onClickListener="@{() -> vm.moveToSettingDetail(2)}"
                app:layout_constraintStart_toStartOf="@id/gl_setting_start"
                app:layout_constraintEnd_toEndOf="@id/gl_setting_end"
                app:layout_constraintTop_toBottomOf="@+id/switch_setting_alarm_marketing"/>

            <com.google.android.material.divider.MaterialDivider
                android:layout_width="0dp"
                android:layout_height="1dp"
                android:background="@color/line_alternative"
                app:layout_constraintStart_toStartOf="@id/gl_setting_start"
                app:layout_constraintEnd_toEndOf="@id/gl_setting_end"
                app:layout_constraintTop_toBottomOf="@+id/tv_setting_open_source"/>

            <com.google.android.material.textview.MaterialTextView
                android:id="@+id/tv_setting_location"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:textAppearance="@style/body1"
                android:textColor="@color/label_normal"
                android:text="@string/setting_location"
                android:paddingTop="24dp"
                app:layout_constraintStart_toStartOf="@id/gl_setting_start"
                app:layout_constraintEnd_toStartOf="@id/switch_setting_location"
                app:layout_constraintTop_toBottomOf="@+id/tv_setting_open_source"/>

            <com.google.android.material.textview.MaterialTextView
                android:id="@+id/tv_setting_location_detail"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:textAppearance="@style/detail2"
                android:textColor="@color/label_assistive"
                android:text="@string/setting_location_detail"
                android:paddingBottom="24dp"
                android:layout_marginTop="4dp"
                app:layout_constraintStart_toStartOf="@id/gl_setting_start"
                app:layout_constraintEnd_toStartOf="@+id/switch_setting_location"
                app:layout_constraintTop_toBottomOf="@+id/tv_setting_location"/>

            <androidx.appcompat.widget.SwitchCompat
                android:id="@+id/switch_setting_location"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:background="@null"
                android:thumb="@drawable/switch_thumb"
                android:checked="@={vm.isLocationInfo()}"
                app:track="@drawable/selector_switch_track"
                app:layout_constraintTop_toTopOf="@id/tv_setting_location"
                app:layout_constraintBottom_toBottomOf="@id/tv_setting_location_detail"
                app:layout_constraintEnd_toEndOf="@id/gl_setting_end"/>

            <com.google.android.material.divider.MaterialDivider
                android:layout_width="0dp"
                android:layout_height="1dp"
                android:background="@color/line_alternative"
                app:layout_constraintStart_toStartOf="@id/gl_setting_start"
                app:layout_constraintEnd_toEndOf="@id/gl_setting_end"
                app:layout_constraintTop_toBottomOf="@+id/tv_setting_location_detail"/>

            <com.google.android.material.textview.MaterialTextView
                android:id="@+id/tv_setting_version_info"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:textAppearance="@style/body1"
                android:textColor="@color/label_normal"
                android:text="@string/setting_version"
                android:paddingTop="24dp"
                android:paddingBottom="24dp"
                app:layout_constraintStart_toStartOf="@id/gl_setting_start"
                app:layout_constraintEnd_toStartOf="@id/tv_setting_version"
                app:layout_constraintTop_toBottomOf="@+id/tv_setting_location_detail"/>

            <com.google.android.material.textview.MaterialTextView
                android:id="@+id/tv_setting_version"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:textAppearance="@style/body2"
                android:textColor="@color/label_assistive"
                android:paddingTop="12dp"
                android:paddingBottom="12dp"
                app:layout_constraintEnd_toEndOf="@id/gl_setting_end"
                app:layout_constraintTop_toTopOf="@id/tv_setting_version_info"
                app:layout_constraintBottom_toBottomOf="@id/tv_setting_version_info"
                tools:text="1.0.0"/>

            <com.google.android.material.divider.MaterialDivider
                android:layout_width="0dp"
                android:layout_height="1dp"
                android:background="@color/line_alternative"
                app:layout_constraintStart_toStartOf="@id/gl_setting_start"
                app:layout_constraintEnd_toEndOf="@id/gl_setting_end"
                app:layout_constraintTop_toBottomOf="@+id/tv_setting_version_info"/>

        </androidx.constraintlayout.widget.ConstraintLayout>


    </androidx.constraintlayout.widget.ConstraintLayout>
</layout>
