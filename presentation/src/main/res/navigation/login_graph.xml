<?xml version="1.0" encoding="utf-8"?>
<navigation xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/login_graph"
    app:startDestination="@id/loginFragment">

    <fragment
        android:id="@+id/loginFragment"
        android:name="com.weit.presentation.ui.login.user.login.LoginFragment"
        android:label="LoginFragment" >
        <action
            android:id="@+id/action_loginFragment_to_userRegistrationFragment"
            app:destination="@id/userRegistrationFragment" />
        <action
            android:id="@+id/action_loginFragment_to_LoginContentFragment"
            app:destination="@+id/loginContentFragment"/>
    </fragment>


    <fragment
        android:id="@+id/userRegistrationFragment"
        android:name="com.weit.presentation.ui.login.user.registration.UserRegistrationFragment"
        android:label="UserRegistrationFragment" >
        <argument android:name="username"
            app:argType="string" />
    </fragment>

    <fragment
        android:id="@+id/loginContentFragment"
        android:name="com.weit.presentation.ui.login.consent.LoginConsentFragment"
        android:label="LoginContentFragment">
        <action
            android:id="@+id/action_loginContentFragment_to_loginNicknameFragment"
            app:destination="@+id/loginNicknameFragment"/>
    </fragment>

    <fragment
        android:id="@+id/loginNicknameFragment"
        android:name="com.weit.presentation.ui.login.nickname.LoginNicknameFragment"
        android:label="LoginNicknameFragment">
        <action
            android:id="@+id/action_loginNicknameFragment_to_loginGenderbirthFragment"
            app:destination="@+id/loginGenderbirthFragment"/>
    </fragment>

    <fragment
        android:id="@+id/loginGenderbirthFragment"
        android:name="com.weit.presentation.ui.login.genderbirth.LoginGenderBirthFragment"
        android:label="LoginGenderbirthFragment">
    </fragment>

</navigation>
